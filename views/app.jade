doctype html
head
  title= i18n.t('connecting')
  link(href='http://fonts.googleapis.com/css?family=Roboto:100,400,300,500,700,900',rel='stylesheet',type='text/css')
  style
    :stylus
      html, body
        width 100%
        height 100%
        margin 0
        padding 0

      body
        background #202020
        display flex
        flex-direction column
        justify-content center
        font 300 24px 'Roboto', Arial
        cursor default

      #Connecting
        display block
        color #888
        text-align center
        text-shadow 0 0 0.5em rgba(0,0,0,0.5)

body
  #Connecting= i18n.t('connecting')

  form#RedirectForm(action=path,method="post")
    input(type="hidden",name="signedData",value=signedData)
  script.
    document.forms[0].submit()
